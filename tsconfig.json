{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "strictFunctionTypes": false,
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "types": ["node"],
        "baseUrl": ".",
        "typeRoots": ["./common/@types"],
        "lib": ["es2020", "dom"],
        "skipLibCheck": true
    },
    "exclude": [".vscode", "aws", "assets", "docs", "hooks", "node_modules", "platforms", "private", "public", "spec"]
}
